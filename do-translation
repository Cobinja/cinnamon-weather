APPLET=~/.local/share/cinnamon/applets/cinnamon-weather@mockturtl

mkdir -p $APPLET/locale/ca/LC_MESSAGES
mkdir -p $APPLET/locale/cs/LC_MESSAGES
mkdir -p $APPLET/locale/de/LC_MESSAGES
mkdir -p $APPLET/locale/es/LC_MESSAGES
mkdir -p $APPLET/locale/fi/LC_MESSAGES
mkdir -p $APPLET/locale/fr/LC_MESSAGES
mkdir -p $APPLET/locale/he/LC_MESSAGES
mkdir -p $APPLET/locale/it/LC_MESSAGES
mkdir -p $APPLET/locale/nb/LC_MESSAGES
mkdir -p $APPLET/locale/nl/LC_MESSAGES
mkdir -p $APPLET/locale/pl/LC_MESSAGES
mkdir -p $APPLET/locale/pt/LC_MESSAGES
mkdir -p $APPLET/locale/ro/LC_MESSAGES
mkdir -p $APPLET/locale/ru/LC_MESSAGES
mkdir -p $APPLET/locale/sk/LC_MESSAGES
mkdir -p $APPLET/locale/sv/LC_MESSAGES
mkdir -p $APPLET/locale/uk/LC_MESSAGES
mkdir -p $APPLET/locale/zh_CN/LC_MESSAGES

msgfmt -c po/ca.po -o $APPLET/locale/ca/LC_MESSAGES/cinnamon-weather@mockturtl.mo
msgfmt -c po/cs.po -o $APPLET/locale/cs/LC_MESSAGES/cinnamon-weather@mockturtl.mo
msgfmt -c po/de.po -o $APPLET/locale/de/LC_MESSAGES/cinnamon-weather@mockturtl.mo
msgfmt -c po/es.po -o $APPLET/locale/es/LC_MESSAGES/cinnamon-weather@mockturtl.mo
msgfmt -c po/fi.po -o $APPLET/locale/fi/LC_MESSAGES/cinnamon-weather@mockturtl.mo
msgfmt -c po/fr.po -o $APPLET/locale/fr/LC_MESSAGES/cinnamon-weather@mockturtl.mo
msgfmt -c po/he.po -o $APPLET/locale/he/LC_MESSAGES/cinnamon-weather@mockturtl.mo
msgfmt -c po/it.po -o $APPLET/locale/it/LC_MESSAGES/cinnamon-weather@mockturtl.mo
msgfmt -c po/nb.po -o $APPLET/locale/nb/LC_MESSAGES/cinnamon-weather@mockturtl.mo
msgfmt -c po/nl.po -o $APPLET/locale/nl/LC_MESSAGES/cinnamon-weather@mockturtl.mo
msgfmt -c po/pl.po -o $APPLET/locale/pl/LC_MESSAGES/cinnamon-weather@mockturtl.mo
msgfmt -c po/pt.po -o $APPLET/locale/pt/LC_MESSAGES/cinnamon-weather@mockturtl.mo
msgfmt -c po/ro.po -o $APPLET/locale/ro/LC_MESSAGES/cinnamon-weather@mockturtl.mo
msgfmt -c po/ru.po -o $APPLET/locale/ru/LC_MESSAGES/cinnamon-weather@mockturtl.mo
msgfmt -c po/sk.po -o $APPLET/locale/sk/LC_MESSAGES/cinnamon-weather@mockturtl.mo
msgfmt -c po/sv.po -o $APPLET/locale/sv/LC_MESSAGES/cinnamon-weather@mockturtl.mo
msgfmt -c po/uk.po -o $APPLET/locale/uk/LC_MESSAGES/cinnamon-weather@mockturtl.mo
msgfmt -c po/zh_CN.po -o $APPLET/locale/zh_CN/LC_MESSAGES/cinnamon-weather@mockturtl.mo

cp -r $APPLET/locale/ ~/.local/share
rm -rf $APPLET/locale
